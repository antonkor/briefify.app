{
  "openapi": "3.0.0",
  "info": {
    "title": "Error Reporting API",
    "version": "1.0.0",
    "description": "Contract for error reporting and retrieval"
  },
  "paths": {
    "/api/errors": {
      "post": {
        "summary": "Report an error",
        "description": "Submit error information for logging and analysis",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ErrorReport"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Error successfully logged",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid error data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get error logs",
        "description": "Retrieve error logs with optional filtering",
        "parameters": [
          {
            "name": "severity",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["low", "medium", "high", "critical"]
            }
          },
          {
            "name": "since",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 100,
              "maximum": 1000
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of errors",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ErrorInfo"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorReport": {
        "type": "object",
        "required": ["message", "context"],
        "properties": {
          "message": {
            "type": "string",
            "minLength": 1
          },
          "stack": {
            "type": "string"
          },
          "componentStack": {
            "type": "string"
          },
          "context": {
            "$ref": "#/components/schemas/ErrorContext"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "default": "medium"
          }
        }
      },
      "ErrorContext": {
        "type": "object",
        "required": ["route"],
        "properties": {
          "userId": {
            "type": "string"
          },
          "route": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        }
      },
      "ErrorInfo": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ErrorReport"
          },
          {
            "type": "object",
            "required": ["id", "timestamp", "handled"],
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "handled": {
                "type": "boolean"
              }
            }
          }
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}